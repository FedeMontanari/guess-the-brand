generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model HighScore {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  score   Int
  mode    Gamemode
  variant Variant
  date    DateTime @default(now())
  user    User     @relation(fields: [userId], references: [uuid])
  userId  String
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  uuid      String      @unique
  highscore HighScore[]
}

enum Gamemode {
  Multiple
  Manual
}

enum Variant {
  Normal
  Timed
}
